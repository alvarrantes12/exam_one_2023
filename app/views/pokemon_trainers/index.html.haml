%p{:style => "color: green"}= notice
.div.m-4
  .page.header 
    %h1.mb-4
      = t('application.list_of_model', model: t('activerecord.modules.pokemon_trainer.other'))
    .float-end.pb-4
      = link_to t('application.create'), pokemon_trainers_path, class: "btn btn-primary"

%table.table.table-striped
  %thread
    %tr
      %th= t('activerecord.attributes.pokemon_trainer.first_name')
      %th= t('activerecord.attributes.pokemon_trainer.last_name')
      %th= t('activerecord.attributes.pokemon_trainer.id_number')
      %th= t('activerecord.attributes.pokemon_trainer.level')
      %th= t('activerecord.attributes.comedian.manager.first_name')
      %th
      %th
      %th

  %tbody
    - @comedians.each do |pokemon_trainer|
      %tr
        %td= pokemon_trainer.first_name
        %td= pokemon_trainer.last_name
        %td= pokemon_trainer.id_number
        %td= pokemon_trainer.level
        %td= pokemon_trainer.manager.first_name
        %td= link_to t('application.show'), pokemon_trainer, class: "btn btn-info"
        %th= link_to t('application.edit'), edit_pokemon_trainers_path(pokemon_trainer), class: "btn btn-success"
        %td= button_to t('application.delete'), pokemon_trainer, method: :delete, class: "btn btn-danger"
%br

