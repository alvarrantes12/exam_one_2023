= form_for @pokemon_trainer, validate: true do |f|
  -if @pokemon_trainer.errors.any?
    .card.mx-4
      .card-body
        %div{style: 'color: red'}
          %h2
            = "Error"
          %ul
            -  @pokemon_trainer.errors.each do |error|
              %li= error.full_message

  .form-group.mx-4
    = f.label :first_name, class: "form-label required"
    .dev.w-25
      = f.text_field :first_name, autofocus: true, class: "form-control"

  .form-group.mx-4
    = f.label :last_name, class: "form-label required"
    .dev.w-25
      = f.text_field :last_name, autofocus: true, class: "form-control"

  .form-group.mx-4
    = f.label :region, class: "form-label required"
    .dev.w-25
      = f.text_field :region, autofocus: true, class: "form-control"

  .form-group.mx-4
    = f.label :id_number, class: "form-label required"
    .dev.w-25
      = f.text_field :id_number, autofocus: true, class: "form-control"

  .form-group.mx-4
    = f.label :level, class: "form-label required"
    .dev.w-25
      = f.select :level, options_for_select(PokemonTrainer.levels.map { |key, _value| [I18n.t("activerecord.attributes.pokemon_trainer.levels.#{key}"), key] }), class: "form-control"

  .row.mt-4
    .offset-3.col-3
      = link_to "Atr√°s", pokemon_trainers_path, class: "btn btn-secondary btn-block"
    .col-3
      = button_tag "Guardar", class: "btn btn-outline-success btn-block"

