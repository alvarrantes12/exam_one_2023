= form_for @pokemon_trainer do |f|
  - if @pokemon_trainer.errors.any?
    #error_explanation
      %h2= t('application.cannot_be_saved', model: t('activerecord.modules.pokemon_trainer.one'))
      %ul
        - @pokemon_trainer.errors.full_messages.each do |message|
          %li= message

  .form-group.mx-4
    = f.label :first_name, class: "form-label required"
    .div.w-25
      =f.text_field :first_name, autofocus: true, class: "form-control"
  
  .form-group.mx-4
    = f.label :last_name, class: "form-label required"
    .div.w-25
      =f.text_field :last_name, autofocus: true, class: "form-control"

  .form-group.mx-4
    = f.label :id_number, class: "form-label required"
    .dev.w-25
      = f.number_field :id_number, autofocus: true, class: "form-control"
  
  .form-group.mx-4
    = f.label :region, class: "form-label required"
    .dev.w-25
      = f.text_field :region, autofocus: true, class: "form-control"
  
  .form-group.mx-4
    = f.label :level, class: "form-label required"
    .dev.w-25
      = f.select(:level, options_for_select(level, @pokemon_trainer.level), {prompt: t('application.select')}, class: "form-control") 
  
  .row.mt-4
    .offset-3.col-3
      = link_to t('application.back'), pokemon_trainers_path, class: "btn btn-secondary btn-block"
    .col-3
      = button_tag t('application.save'), class: "btn btn-outline-secondary btn-block"